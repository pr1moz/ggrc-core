<div class="item-main {{#if active}}active{{/if}} {{#zero_state}}hidden{{/zero_state}}" data-model="true">
  <div class="item-wrap">
    <div class="openclose">
      {{^tree_view_read_only}}
      <span class="status-label status-{{state_color}}"></span>
      <i class="fa fa-caret-right"></i>
      {{/tree_view_read_only}}
    </div>
    <div class="select">
      <div class="item-data">
        <div class="row-fluid">
          <div class="span4">
            <div class="title tree-title-area" rel="tooltip" data-placement="left" title=""
            data-original-title="{{title}}">
              <i class="fa fa-{{icon}}"></i>
              {{title}}
            </div>
          </div>

          <div class="span2">
            <div class="row-fluid">
              <div class="span12">
                <div class="owner tree-title-area">
                  {{workflow_title}}
                </div>
              </div>
            </div>
          </div>

          <div class="span2">
            <div class="row-fluid">
              <div class="span12">
                <div class="owner tree-title-area">
                  {{obj_title}}
                </div>
              </div>
            </div>
          </div>

          <div class="span4">
            <ul class="tree-action-list tasks-action">
              <li>
                <div class="date">
                  {{^tree_view_read_only}}
                    <span rel="tooltip" data-placement="top" class="error" data-original-title="Due On">
                      <i class="fa fa-clock-o red"></i> 01/20/2016
                    </span>
                  {{/tree_view_read_only}}
                  {{#tree_view_read_only}}
                    <span rel="tooltip" data-placement="top" data-original-title="Ends on">
                      <span class="uppercase">Ends on</span> 20th
                    </span>
                  {{/tree_view_read_only}}
                </div>
              </li>
              {{^tree_view_read_only}}
              <li>
                <span class="counter" rel="tooltip" data-placement="left" data-original-title="# of objects">
                  <i class="fa fa-list-alt"></i>
                  <strong class="error">1</strong>
                </span>
              </li>
              <li>
                <span class="counter" rel="tooltip" data-placement="left" data-original-title="# of comments">
                  <i class="fa fa-comment-o"></i>
                  <strong class="error">0</strong>
                </span>
              </li>
              <li>
                <div class="request-control">
                  <button class="btn btn-mini btn-info change-task-status " data-openclose="open" data-name="status" data-value="InProgress">Start</button>
                </div>
              </li>
              {{/tree_view_read_only}}
            </ul>
          </div>
        </div>
      </div><!-- item-data end -->
    </div><!-- select end -->
  </div><!-- item-wrap end -->
</div><!-- item-main end -->

{{#zero_state}}
  <div class="zero-state">
    <h2>
      <a href="#QuickTaskCreate" data-toggle="modal">Add first task</a>
    </h2>
  </div>
{{/zero_state}}

{{#if children}}
  <div class="tier-2-info item-content">
    <div class="tier-2-info-content">
      <div class="inner-tree">
        <ul class="tree-structure new-tree"></ul>
      </div>
    </div>
  </div>
{{/if}}
