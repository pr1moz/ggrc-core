{{> /static/mustache/mockup_base_templates/info_panel/my_task_header.mustache}}
<div class="row-fluid">
  <div class="span8">
    <div class="row-fluid wrap-row">
      <div class="span12">
        {{> /static/mustache/mockup_base_templates/info_panel/description.mustache}}
      </div>
    </div>

    <div class="row-fluid wrap-row">
      <div class="span6">
        {{> /static/mustache/mockup_base_templates/info_panel/task_objects.mustache}}
      </div>
    </div>

    <div class="row-fluid wrap-row">
      <div class="span6">
        {{> /static/mustache/mockup_base_templates/quick-task/workflow_list.mustache}}
      </div>
    </div>
  </div>

  <div class="span4">
    <div class="row-fluid wrap-row">
      <div class="span12">
        {{> /static/mustache/mockup_base_templates/quick-task/assignee.mustache}}
      </div>
    </div>

    <div class="row-fluid">
      {{> /static/mustache/mockup_base_templates/quick-task/dates.mustache}}
    </div>
  </div>
</div>

<div class="tabs-wrap">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">
      Comments and Attachments ({{comments.length}})
    </a></li>
    <li><a href="#tab2" data-toggle="tab">
      Task log
    </a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane fade in active" id="tab1">
      {{^if_equals type 'my_task_readonly'}}
        <div class="tree-item-add">
          <add-comment data="comments"></add-comment>
        </div>
      {{/if_equals}}
      {{> /static/mustache/mockup_base_templates/info_panel/comment_list.mustache}}
    </div>

    <div class="tab-pane fade" id="tab2">
      {{> /static/mustache/mockup_base_templates/info_panel/log_list.mustache}}
    </div>
  </div>
</div>
